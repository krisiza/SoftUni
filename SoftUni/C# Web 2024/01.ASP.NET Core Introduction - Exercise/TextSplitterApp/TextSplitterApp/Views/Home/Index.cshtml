@using TextSplitterApp.Models.Text
@model TextViewModel


<form asp-asp-controller="Home" asp-action="Index" method="post">
    <div class="col-12">
        <input asp-for="@Model.Text" class="mr-2"/>
        <span asp-validation-for="@Model.Text" class="small text-danger"></span>
        <br />
        <button type="submit" class="btn btn-primary">Split Text</button>
    </div>

    <div class="col-2 mt-3">
        <textarea rows="10">@Model.SplitText</textarea>
    </div>
</form>
@section Scripts{
    <partial name ="_ValidationScriptsPartial" />
}
